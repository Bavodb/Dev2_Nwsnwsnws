<h1><%= title %></h1>

<% if (allNews.length === 0) { %>
  <p>Er is geen nieuws beschikbaar</p>
<% } else { %>
  <h2>News articles:</h2>
  <% allNews.forEach(item => { %>
    <a href="/newsArticle/<%= item.slug %>"><%= item.title %>  <br /></a>
  <% }) %>
<% } %>


